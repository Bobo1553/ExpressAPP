<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
    </style>
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
        <item name="drawerArrowStyle">@style/MyMaterialTheme.drawerArrowStyle</item>
    </style>
    <style name="MyMaterialTheme.drawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/windowBackground</item>
    </style>
    <style name="ToolbarTheme" parent="@style/Base.Widget.AppCompat.Toolbar">
        <item name="android:actionMenuTextColor">@color/windowBackground</item>
    </style>

</resources>
